[user]
	name = Nicolas Azrak
	email = azrak.nicolas@gmail.com

[core]
    editor = nano
    pager = diff-so-fancy | less --tabs=1,5 -RFX

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	l = log --graph --color --decorate=short
	ln = log --graph --color --decorate=full --name-status
	lc =  log --graph --abbrev-commit --author-date-order --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --branches
	ff = merge --ff-only
	poh = push origin HEAD
	pohf = push --force-with-lease origin HEAD
    fap = fetch --all --prune

[diff]
    compactionHeuristic = true

[http "https://gopkg.in"]
	followRedirects = true
