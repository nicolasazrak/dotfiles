[user]
	name = Nicolas Azrak
	email = azrak.nicolas@gmail.com

[core]
    editor = nano

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	l = log --graph --color --decorate=short
	ln = log --graph --color --decorate=full --name-status
	lc =  log --graph --abbrev-commit --decorate --oneline 
	ff = merge --ff-only
	poh = push origin HEAD
	pohf = push --force-with-lease origin HEAD
    fap = fetch --all --prune

[diff]
    compactionHeuristic = true

[http "https://gopkg.in"]
	followRedirects = true

[pager]
    show = diff-so-fancy | less --tabs=4 -RFX
    diff = diff-so-fancy | less --tabs=4 -RFX
